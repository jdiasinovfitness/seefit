{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"sourceMap": true,
		"outDir": "dist",
		"removeComments": true,
		"strict": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"rootDir": "src",
		"baseUrl": "./src",
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
	"include": ["src/**/*.ts"]
}
